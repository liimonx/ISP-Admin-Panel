# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://isp_admin:your-secure-password@db:5432/isp_admin

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Settings (in hours)
JWT_ACCESS_TOKEN_LIFETIME=24
JWT_REFRESH_TOKEN_LIFETIME=168

# Payment Providers (Configure with your actual credentials)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
BKASH_APP_KEY=your_bkash_app_key
BKASH_APP_SECRET=your_bkash_app_secret
SSLCOMMERZ_STORE_ID=your_sslcommerz_store_id
SSLCOMMERZ_STORE_PASSWORD=your_sslcommerz_store_password

# RouterOS Configuration
ROUTEROS_DEFAULT_PORT=8729
ROUTEROS_DEFAULT_USERNAME=admin
ROUTEROS_DEFAULT_PASSWORD=your_router_password
MAIN_ROUTER_PASSWORD=your_main_router_password

# SNMP Settings
SNMP_COMMUNITY=your_secure_snmp_community
SNMP_TIMEOUT=5
SNMP_RETRIES=3

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log

# Rate Limiting
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_LOGIN=10
RATE_LIMIT_PASSWORD_RESET=5

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_NUMBER_FIELDS=1000

# Session Settings
SESSION_COOKIE_AGE=86400
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict

# CSRF Settings
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict
